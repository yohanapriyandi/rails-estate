<div class="property-main-photo overlay" style="background-image:url(<%= property_photo_url @property %>)">
  
</div>
<div class="container mt-3">
  <div class="row">
    <div class=col-md-8>
      <div class="row">
        <div class="col-lg-6">
          <p class="h4 mb-0"><%= @property.for_sale? ? "For Sale" : "For Rent" %><p>  
          <p class="mt-0"><%= @property.address %><p>
            <p class="h2 mb-3">
              <% if @property.for_sale? %>
                <%= @property.price > 0 ? number_to_currency(@property.price, precision: 0) : "Offer Accepted" %> 
              <% else %>
                <%= @property.price > 0 ? number_to_currency(@property.price, precision: 0) : "Open for Enquiries" %>/month
              <% end %>              
            </p>
        </div>
        <div class="col-lg-6 text-center">
          <div class="row mt-sm-3 bg-light p-3">
            <div class="col-4">
              <i class="fas fa-bed text-muted ms-5 me-5"></i>
              <small> <%= @property.rooms %> Bedrooms </small>
            </div>
            <div class="col-4">
              <i class="fas fa-bath text-muted ms-5 me-5"></i>
              <small> <%= @property.bathrooms %> Bathrooms </small>
            </div>
            <div class="col-4">
              <i class="fas fa-car text-muted ms-5 me-5"></i>
              <small> <%= @property.parking_spaces %> Parking </small>
            </div>
          </div>          
        </div>
      </div>
      <div class="row border-top border-bottom mt-5 mb-5 pt-4 pb-4">
        <div class="col-6 text-start">
          <% if @property.for_sale? %>
            <strong><%= link_to "Est. Monthly repayments of #{number_to_currency((@property.price - (@property.price * 0.1)) / 360, precision: 0) } *", "#", class: "text-success" %></strong>
          <% else %>
            <strong> Available from <%= @property.available_date.strftime("%a") %> <%= @property.available_date.day.ordinalize %>, <%= @property.available_date.strftime("%B") %> </strong>
          <% end %>          
        </div>
        <div class="col-6 text-end">
          <strong><%= link_to "Can I afford this property?", "#", class: "text-success" %></strong>
        </div>
      </div>    
      <div class="row">
        <div class="col">
          <p class="h3"><%= @property.name %></p>
          <p class="h5">Property Description</p>
          <div id="prop-details">
            <%= simple_format @property.details%>
          </div>

          <button id="toggleDetails" class="btn btn-success btn-sm mt-3">Show Details</button>
          
          <% if @property.for_sale %>
            <p class="mt-3">
              * Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt                        
            </p>            
          <% end %>          
        </div>        
      </div>      
    </div>
    <div class="col-md-4">
        <%= render "properties/agent_details" %>
        <iframe class="ms-lg-4 mt-3" 
          src="https://www.google.com/maps/embed?pb=<%= @property.address.to_param %>" width="325" height="400" style="border:0;" allowfullscreen="" loading="lazy">
        </iframe>
    </div>
  </div>
</div>

<section class="mt-5 mb-5">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <p class="h3 mb-3">Other properties by this agent</p>
      </div>      
      <%= render "properties/list", properties: @agent_properties %>
    </div>
  </div>      
</section>

<%= render 'properties/send_email' %>

