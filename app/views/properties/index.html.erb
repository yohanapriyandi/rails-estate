<h1 class="h3">Properties</h1>

<table class="table  table-borderless table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Price in $USD</th>
      <th>Rooms</th>
      <th>Bathrooms</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td><%= property.address %></td>
        <td>$ <%= property.price %></td>
        <td><%= property.rooms %></td>
        <td><%= property.bathrooms %></td>
        <td><%= link_to 'Show', property, class: "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Edit', edit_property_path(property), class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Delete', property, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Property', new_property_path, class: "btn btn-success" %>
