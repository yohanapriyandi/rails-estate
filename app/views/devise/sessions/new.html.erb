<section class="form-auth">
<%= form_for(resource, as: resource_name, url: session_path(resource_name))  do |f| %>

  <div class="text-center mb-4">    
    <h1 class="h3 mb-3 font-weight-normal">Please Signin</h1>    
  </div>

  <div class="form-label-group">    
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email", id: "inputEmail" %>    
    <label for="inputEmail">Email address</label>
  </div>  
  <div class="form-label-group">       
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password", id: "inputPassword" %>
    <label for="inputPassword">Password</label>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign in", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</section>
