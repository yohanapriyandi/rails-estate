<section class="form-auth">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="text-center mb-4">    
      <h1 class="h3 mb-3 font-weight-normal">Forgot Password</h1>
      <p>Insert your valid email, and get link for reset password on inbox</p>
    </div>

    <div class="form-label-group">    
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email", id: "inputEmail" %>        
    </div>

    <div class="actions">
      <%= f.submit "Send", class: "btn btn-lg btn-info btn-block" %>
    </div>
    
  <% end %>
  <%= render "devise/shared/links" %>
</section>